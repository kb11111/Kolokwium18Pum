<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    tools:context="com.example.student.rejestracja.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umów wiyztę"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="40dp"
        android:text="Wpisz pesel pacjenta dla ktorego chcesz umowic wizyte"
        android:gravity="center"
        android:textSize="13sp"
        />

    <EditText
        android:id="@+id/Edtxt_podajNr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj numer pesel"
        android:gravity="center"/>

    <ImageView
        android:layout_width="104dp"
        android:layout_height="102dp"
        android:src="@drawable/ic_healing_black_24dp"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_wybierzLekarza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="WYBIERZ LEKARZA"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"/>

</LinearLayout>
